@model List<InternshipProject.Models.ApprovalRequestViewModel>
@{
}
<div class="approval-requests">
    @if (Model.Count() > 0)
    {
        @foreach (var m in Model)
        {
            <br />
            <h4>Subject: @m.Topic</h4>
            <h4>Created On: @m.Created</h4>
            <h4>Request Id: @m.Id</h4>
            <h4 class="approval-status">Status:</h4>
            @if (m.Status == false)
            {
                <h4 class="rejected">Rejected</h4>
            }
            else if (m.Status == true)
            {
                <h4 class="approved">Approved</h4>
            }
            else
            {
                <h4 class="pending">Pending</h4>
            }
            <br />
        }
    }
    else
    {
        <h1>No Request created yet!!</h1>
    }
</div>

